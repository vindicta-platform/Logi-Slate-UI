{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "paths": {
            "@vindicta/ui-kit": [
                "./packages/ui-kit/src"
            ],
            "@vindicta/ui-kit/*": [
                "./packages/ui-kit/src/*"
            ]
        }
    },
    "references": [
        {
            "path": "./packages/ui-kit"
        }
    ]
}